{
  "rules": {
    "appSettings": {
      ".read": "true",
      ".write": "false"
    },
    "ids": {
      ".read": "auth.token.email_verified === true",
      ".write": "newData.exists() && auth != null"
    },
    "PERRINNStatistics": {
      ".read": "auth.token.email_verified === true"
    },
    "PERRINNTeamBalance": {
      ".read": "auth.token.email_verified === true",
      ".indexOn": ["balanceNegative"]
    },
    "PERRINNTransactions": {
      ".read": "auth.token.email_verified === true",
      ".indexOn": ["sender","receiver"]
    },
    "projectTeams": {
      ".read": "auth.token.email_verified === true",
      "$projectid": {
        ".indexOn": ["member"],
        "$teamid": {
          ".write": "(!data.exists() || newData.exists() && root.child('projectTeams').child($projectid).child(root.child('userInterface').child(auth.uid).child('currentTeam').val()).child('leader').val() === true && root.child('teamUsers').child(root.child('userInterface').child(auth.uid).child('currentTeam').val()).child(auth.uid).child('leader').val() === true && data.child('leader').val() != true) && auth != null"
        }
      }
    },
    "projects": {
      ".read": "auth.token.email_verified === true",
      ".indexOn": ["name"],
      "$projectid": {
        ".write": "(!data.exists() || newData.exists() && root.child('projectTeams').child($projectid).child(root.child('userInterface').child(auth.uid).child('currentTeam').val()).child('leader').val() === true && root.child('teamUsers').child(root.child('userInterface').child(auth.uid).child('currentTeam').val()).child(auth.uid).child('leader').val() === true) && auth != null"
      }
    },
    "teamActivities": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
        ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('member').val() === true && auth != null"
      }
    },
    "teamAds": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
        ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true"
      }
    },
    "teamLinks": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
        ".write": "root.child('teamUsers').child($teamid).child(auth.uid).child('member').val() === true"
      }
    },
    "teamMessages": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
        ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('member').val() === true"
      }
    },
    "teamPayments": {
      "$teamid": {
        "$chargeid": {
          ".read": "auth.token.email_verified === true",
          ".write": "!data.exists() && newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true"
        }
      }
    },
    "teamProjects": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
      ".indexOn": ["following"],
        "$projectid": {
          ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true"
        }
      }
    },
    "teamTransactionRequests": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
        ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('member').val() === true",
        ".indexOn": ["status"]
      }
    },
    "teamTransactions": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
        ".write": "newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true",
        ".indexOn": ["status"],
        "$transactionid": {
          "amount": {
            ".validate": "newData.isNumber() && newData.val() > 0"
          }
        }
      }
    },
    "teamUsers": {
      ".read": "auth.token.email_verified === true",
      "$teamid": {
        ".indexOn": ["leader","member"],
        "$uid": {
          ".write": "(!data.exists() || newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true && data.child('leader').val() != true) && auth != null"
        }
      }
    },
    "teams": {
      ".read": "auth.token.email_verified === true",
      ".indexOn": ["name"],
      "$teamid": {
        ".write": "(!data.exists() || newData.exists() && root.child('teamUsers').child($teamid).child(auth.uid).child('leader').val() === true) && auth != null"
      }
    },
    "userInterface": {
      ".read": "auth.token.email_verified === true",
      "$uid": {
        ".write": "newData.exists() && auth.uid === $uid"
      }
    },
    "userTeams": {
      ".read": "auth.token.email_verified === true",
      "$uid": {
        ".write": "newData.exists() && auth.uid === $uid",
        ".indexOn": ["following"]
      }
    },
    "users": {
      ".read": "auth.token.email_verified === true",
      ".indexOn": ["firstName"],
      "$uid": {
        ".write": "newData.exists() && auth.uid === $uid"
      }
    }
  }
}
